
def plusMinus(arr):
    # Write your code here
    p=0
    n=0
    z=0
    for num in arr:
        if num>0:
            p+=1
        elif num<0:
            n+=1
        else:
            z+=1
    l=len(arr)
    pr=p/l
    nr=n/l
    zr=z/l
    print(f"{pr:.6f}")
    print(f"{nr:.6f}")
    print(f"{zr:.6f}")
